{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "courts.schema.json",
  "title": "Court",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "court_uid",
    "name",
    "branch",
    "region_code"
  ],
  "properties": {
    "court_uid": {
      "type": "string",
      "format": "uuid"
    },
    "sudrf_ext_id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "name_short": {
      "type": "string"
    },
    "branch": {
      "type": "string",
      "enum": [
        "общая юрисдикция",
        "арбитраж",
        "мировой",
        "апелляция",
        "кассация",
        "верховный"
      ]
    },
    "instance_level": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4
    },
    "region_code": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "timezone": {
      "type": "string"
    },
    "website_url": {
      "type": "string",
      "format": "uri"
    },
    "source_url": {
      "type": "string",
      "format": "uri"
    },
    "x-db": {
      "type": "object",
      "properties": {
        "pk": {
          "const": "court_uid"
        }
      }
    }
  }
}